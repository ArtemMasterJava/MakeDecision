<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_decision"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ivart.makedecision.Activities.MakeDecisionActivity">
    <TextView
        android:text="@string/txtv_enter_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="What if ...?"
        android:id="@+id/edt_decision_question"
        android:inputType="textCapSentences"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"/>
    <Button
        android:textAlignment="center"
        android:text="@string/add_decision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_decision"/>
</LinearLayout>
