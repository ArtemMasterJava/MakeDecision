<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_description"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/backgroundtwo"
              tools:context="com.ivart.makedecision.MainActivity">

    <EditText
        android:id="@+id/edt_edit_decision_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="@string/edit_hint_description"
        android:textColorHint="@color/primary_light"
        android:inputType="textCapSentences"
        android:background="@android:color/transparent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:layout_above="@+id/edit_raiting_bar"/>

    <RatingBar
        android:id="@+id/edit_raiting_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:layout_marginBottom="25dp"
        android:theme="@style/MyRatingBar"
        android:layout_alignBottom="@+id/btn_edit_description"
        android:layout_centerHorizontal="true"></RatingBar>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_edit_description"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add_white_24dp"
        android:onClick="onClick"
        fab:fab_colorNormal="@color/colorGreenLight1"
        fab:fab_colorPressed="@color/theme_yellow_primary_dark"
        fab:fab_colorRipple="@color/theme_yellow_primary_dark"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
