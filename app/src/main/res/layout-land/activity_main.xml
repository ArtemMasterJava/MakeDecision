<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/md_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="@string/about_us"
        android:id="@+id/btn_about_us"
        android:clickable="true"
        android:textColor="@color/gray"
        android:gravity="center|center_horizontal"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="2200"
        app:sub_btn_line_color="@color/green"
        app:sub_btn_ripple_color="@color/green"
        app:sub_btn_tick_color="@color/white"
        android:layout_weight="0.3"
        android:fillAfter= "true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <com.spark.submitbutton.SubmitButton
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="@string/make_decision"
        android:id="@+id/btn_make_decision"
        android:layout_weight="0.3"
        android:clickable="true"
        android:textColor="@color/gray"
        android:gravity="center|center_horizontal"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="2200"
        app:sub_btn_line_color="@color/green"
        app:sub_btn_ripple_color="@color/green"
        app:sub_btn_tick_color="@color/white"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="@string/get_my_decisions"
        android:id="@+id/btn_get_my_decisions"
        android:clickable="true"
        android:textColor="@color/gray"
        android:gravity="center|center_horizontal"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="2200"
        app:sub_btn_line_color="@color/green"
        app:sub_btn_ripple_color="@color/green"
        app:sub_btn_tick_color="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
